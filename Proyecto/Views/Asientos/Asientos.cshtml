@model IEnumerable<Proyecto.Entities.AsientoEnt>

@{
    ViewBag.Title = "Asientos";
}

<div class="container-fluid px-4" style="padding-top: 25px">

    <div class="row">

        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Asientos
                    <button class="btn btn-primary" id="btnExportar" onclick="expotar();" style="margin-left: 50px"><i class="fas fa-plus"></i> Expotar</button>
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>Asiento</th>
                                <th>Fecha</th>
                                <th>Descripcion</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Asiento</th>
                                <th>Fecha</th>
                                <th>Descripcion</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var asiento in Model)
                            {
                                <tr>
                                    <td>@asiento.idAsiento</td>
                                    <td>@asiento.fecha</td>
                                    <td>@asiento.descripcion</td>
                                    <td>
                                        <a href="@Url.Action("detalleAsiento","Asiento", new {idActivo = @asiento.idAsiento.ToString()})" class="btn btn-outline-primary"><i class="fa fa-eye"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="~/Scripts/Custom Scripts/detalleActivos.js"></script>
