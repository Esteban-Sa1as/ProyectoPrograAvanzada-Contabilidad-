@model Proyecto.Entities.UsuarioEnt

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout_login.cshtml";
}
     
        <div class="row align-self-center justify-content-center">
            
            <div class="col-lg-2">
                <img src="~/templates/assets/img/Login img.png" alt="Manejo de Activos Log In" style="width: 100%" />
            </div>

            <div class="col-lg-4 align-self-center">
                <div class="container">
                    <h4>Iniciar Sesión</h4>

                    @using (Html.BeginForm("Principal", "Home", FormMethod.Post, new { @class = "pt-3" }))
                    {
                        <div class="form-group">
                            @Html.TextBoxFor(Model => Model.correo, new { @class = "form-control", @placeholder = "Correo Electrónico", @required = true })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(Model => Model.contraseña, new { @class = "form-control", @placeholder = "Contraseña", @type = "Password", @required = true })
                        </div>
                        <div class="mt-3">
                            <div style ="color: red">
                                @ViewBag.mensajeError
                            </div>
                            <input type="submit" class="btn btn-block btn-secondary btn-lg font-weight-medium auth-form-btn" value="Iniciar Sesión">
                        </div>

                        <div class="text-center mt-4 font-weight-light">
                            <a href="@Url.Action("recuperarContraseña", "Home")" class="text-secondary">¿Olvidó su contraseña?</a>
                        </div>
                    }

                </div>
            </div>

        </div>