@model  Entities.UsuarioEnt

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout_login.cshtml";
}

<div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
            <div class="col-lg-4 mx-auto">
                <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                    <div class="brand-logo">
                        <img src="~/template/images/logo.svg" />
                    </div>
                    <h4>Iniciar Sesión</h4>

                    @using (Html.BeginForm("Principal", "Home", FormMethod.Post, new { @class = "pt-3" }))
                    {
                        <div class="form-group">
                            @Html.TextBoxFor(Model => Model.CorreoElectronico, new { @class = "form-control form-control-lg", @placeholder = "Correo Electrónico", @required = true })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(Model => Model.Contrasenna, new { @class = "form-control form-control-lg", @placeholder = "Contraseña", @type = "Password", @required = true })
                        </div>
                        <div class="mt-3">
                            <div class="EstiloMensajeError">
                                @ViewBag.mensajeError
                            </div>
                            <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="Iniciar Sesión">
                        </div>

                        <div class="text-center mt-4 font-weight-light">
                            <a href="@Url.Action("RegistrarUsuario","Home")" class="text-primary">Crear una cuenta</a>
                            <br>
                            <a href="@Url.Action("RecuperarContrasenna", "Home")" class="text-primary">¿Olvidó su contraseña?</a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
