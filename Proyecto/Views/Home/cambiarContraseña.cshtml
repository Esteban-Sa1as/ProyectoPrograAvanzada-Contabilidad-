@model Proyecto.Entities.UsuarioEnt

@{
    ViewBag.Title = "cambiarContraseña";
    Layout = "~/Views/Shared/_Layout_login.cshtml";
}

<div class="row align-self-center justify-content-center">

    <div class="col-lg-2">
        <img src="~/templates/assets/img/Reset password.png" alt="Manejo de Activos Log In" style="width: 100%" />
    </div>

    <div class="col-lg-4 align-self-center">
        <div class="container">
            <h4>Recuperar Contraseña</h4>

            @using (Html.BeginForm("CambiarContraseña", "Home", FormMethod.Post, new { @class = "pt-3" }))
            {
                <div class="form-group">
                    @Html.PasswordFor(Model => Model.contraseña, new { @class = "form-control", @placeholder = "Indique la nueva contraseña", @required = true})
                </div>
                <div class="mt-3">
                    <div style="color: red">
                        @ViewBag.mensajeError
                    </div>
                    <input type="submit" class="btn btn-block btn-secondary btn-lg font-weight-medium auth-form-btn" value="Restaurar Contraseña">
                </div>
            }

        </div>
    </div>

</div>

